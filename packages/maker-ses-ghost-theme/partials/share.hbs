{{!-- Include this partial inside an element with class 'share' --}}
<a href="#" class="trigger-share"><i class="fas fa-share-alt"></i></a>
<ul>
    <li><a href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute=" true"}}"
            onclick="window.open(this.href, 'share-twitter', 'width=550,height=235');return false;"
            data-toggle="tooltip" data-placement="right" title="{{t " Share on Twitter"}}"><i
                class="fab fa-twitter"></i></a></li>
    <li><a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute=" true"}}"
            onclick="window.open(this.href, 'share-facebook', 'width=580,height=296');return false;"
            data-toggle="tooltip" data-placement="right" title="{{t " Share on Facebook"}}"><i
                class="fab fa-facebook-f"></i></a></li>
    <li><a href="https://www.reddit.com/submit?url={{url absolute=" true"}}" target="_blank" data-toggle="tooltip"
            data-placement="right" title="{{t " Share on Reddit"}}"><i class="fab fa-reddit-alien"></i></a></li>
    <li><a href="mailto:?subject={{encode @site.title}}%20-%20{{title}}&amp;body={{url absolute=" true"}}"
            data-toggle="tooltip" data-placement="right" title="{{t " Share by Email"}}"><i
                class="fas fa-envelope"></i></a></li>
</ul>